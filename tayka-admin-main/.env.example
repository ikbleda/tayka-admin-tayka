# Backend base URL (full URL or relative)
# - Direct:  VITE_API_URL=https://api.example.com
# - Proxy:   VITE_API_URL=/api  (use VITE_API_PROXY_TARGET below)
VITE_API_URL=

# Optional: send cookies/session with cross-origin requests.
# Default is false (token-based auth). If true, backend must return proper CORS:
# - Access-Control-Allow-Credentials: true
# - Access-Control-Allow-Origin: <exact vercel origin> (not *)
VITE_API_WITH_CREDENTIALS=false

# Optional: use Vite dev-server proxy to avoid CORS in development
# Example: VITE_API_PROXY_TARGET=http://localhost:8080
VITE_API_PROXY_TARGET=

# If true, /api prefix is stripped when proxying (default: true)
VITE_API_PROXY_STRIP_PREFIX=true

# Auth mode
VITE_USE_FAKE_AUTH=false
VITE_ALLOW_FAKE_FALLBACK=false

# Fake auth credentials (optional)
VITE_FAKE_EMAIL=admin@tayka.com
VITE_FAKE_PASSWORD=tayka123

# Optional endpoint overrides
VITE_AUTH_LOGIN_PATH=/auth/login
VITE_AUTH_LOGOUT_PATH=/auth/logout
VITE_AUTH_ME_PATH=/auth/me
VITE_USERS_PATH=/users
VITE_EVENTS_PATH=/events

# Simulation (backend)
VITE_SIM_MODE=fake
VITE_HEALTH_PATH=/health
VITE_SIM_START_PATH=/api/sim/start
VITE_SIM_APPROVE_PATH=/api/sim/approve
VITE_SIM_ABORT_PATH=/api/sim/abort

# WebSocket (events/logs streaming)
# If empty, tries to derive from VITE_API_URL (only works for full http/https URLs)
VITE_WS_URL=
